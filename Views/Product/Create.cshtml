@{
}


<h2>Skapa en produkt</h2>

@if (!string.IsNullOrEmpty(ViewBag.Error))
{
    <p style="color:red">@ViewBag.Error</p>
}

<form asp-action="Create" method="post">
    <input type="text" name="name" placeholder="Produktnamn" />
    <input type="text" name="Description" placeholder="Beskrivning" />
    <input type="number" name="Price" placeholder="Pris" />

   
    <select id="category" name="Category" class="form-control">
        <option value="">Välj kategori</option>
        @foreach (var category in ViewBag.Categories as List<string>)
        {
            if (Model?.Category == category)
            {
                <option value="@category" selected>@category</option>
            }
            else
            {
                <option value="@category">@category</option>
            }
        }
    </select>

    <button type="submit">Lägg till produkt</button>
</form>
<a asp-action="Index">Tillbaka till produktkatalogen</a>
